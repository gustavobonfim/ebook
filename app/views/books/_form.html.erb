<%= simple_form_for(@book, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>


    <%= f.input :name, label: false, require: true,
                placeholder: "Name of the book" %>
    <%= f.input :author, label: false,  require: true,
                placeholder: "Name of the author" %>
    <%= f.input :description, label: false,  require: true,
                placeholder: "Little description of the book" %>
    <%= f.input :image %>
    <%= f.input :resource %>
    <%= f.input :price, label: false,  require: true,
                placeholder: "Price of the book" %>
    <%= f.input :availability %>



    <%= f.button :submit, class: "btn btn-success btn-block" %>

<% end %>
