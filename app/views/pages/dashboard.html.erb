<div class="container">
  <h1 class="page-header">Dashboard</h1>

  <div class="row">
    <div class="col-md-4">
      <h3 class="page-header">Books<%= link_to 'New Book', new_book_path, class: "btn btn-primary pull-right" %></h3>
      <table class="table table-condensed">
        <thead>
          <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Availability</th>
            <th></th>
          </tr>
        </thead>
        <% @books.each do |book| %>
          <tbody>
            <tr>
              <td><%= book.id %></td>
              <td><%= book.name %></td>
              <td><%= book.availability ? "Yes" : "No" %></td>
              <td><%= link_to 'Show', book_path(book), class: "btn btn-primary btn-sm" %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>

    <div class="col-md-4">
      <h3>Purchases</h3>
    </div>

    <div class="col-md-4">
      <h3>Sales</h3>
    </div>
  </div>
</div>
